<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/metas'); %>
</head>

<body>
    <%- include('../partials/menu'); %>
    <div id="ordenacionFotos">
        <a href="/?fechaOrden=asc">Ordenar por fecha creciente</a>
        <a href="/?fechaOrden=dec">Ordenar por fecha decreciente</a>
    </div>
    <ul>
        <% fotos.forEach(function(foto) { %>
            <li>
                <div>
                    <img class="foto" src="<%= foto.url %>" alt="<%= foto.titulo %>">
                    <strong>
                        <%= foto.titulo %> - <%= foto.fecha %>
                    </strong>                
                    <span style="background-color: rgb(<%= foto.color %>)">
                        <%= foto.color %>
                    </span>
                </div>
            </li>
            <% }); %>
    </ul>

    <script src="script.js"></script>
</body>

</html>